# ==================== 应用配置 ====================
APP_NAME=Citibank Backend API
APP_VERSION=0.1.0
APP_DESCRIPTION=Citibank 后端服务 API

# 服务器配置
HOST=0.0.0.0
PORT=8091

# API 配置
API_V1_PREFIX=/api/v1

# 调试模式
DEBUG=True

# CORS 配置
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ==================== 数据库配置 ====================

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://redis:6379/0

# MySQL 配置
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=citibank
MYSQL_PASSWORD=citibank123
MYSQL_DATABASE=citibank_db
# MYSQL_URL=mysql+pymysql://citibank:citibank123@mysql:3306/citibank_db

# ==================== 消息队列配置 ====================

# Kafka 配置
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_GROUP_ID=citibank-backend
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=True

# Zookeeper 配置
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka Broker 配置
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1

# ==================== 其他配置 ====================

# 时区配置
TZ=Asia/Shanghai

# JWT 配置 (如需要)
# SECRET_KEY=your-secret-key-here
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
